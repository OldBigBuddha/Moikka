@import './variables.styl'
@import './flex.styl'

.post-writer
  margin 20px 0
  padding: 15px 17px 17px;
  border 3px solid #ddd;
  flexbox()
  background $base
  .writer-portfolio
    flex-basis: 80px;
    width: 80px;
    max-width: 80px;
    height: 80px;
    border-radius 50%
    box-shadow 0px 0px 0px 3px $accent;
    transition .5s
    &:hover
      box-shadow 0px 0px 5px 4px $accent;
    img
      border-radius 50%
  .writer-description
    display: block;
    margin: 0 0 0 22px;
    h2
      margin: 3px 0px 3px 0px;
      font-size: 11px;
      line-height: 30px;
      letter-spacing: .05rem;
      height 30px
      &:before
        content "この記事を書いた人:"
    .writer-name
      padding 0 0 0 5px
      font-size: 18px;
      font-weight: 700;
      line-height: 1.5;
      letter-spacing: .05rem;
      color: #181818;
    .writer-description
      margin 0
      font-size: 13px;
      line-height: 1.5;
      letter-spacing: .05rem;