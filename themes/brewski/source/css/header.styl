@import './variables.styl'
@import './flex.styl'

header.main-header
  height 70px
  margin-top 12px
  flexbox()
  align-items center

  #logo
    height 100%
    width auto
    margin 1rem
    margin-right auto

  .nav-list
    display contents
    margin .5rem

    .nav-list-link
      &:hover
        border-bottom .2em solid $primary
        transition 150ms ease-in-out

    .nav-list-item
      margin 0
      display inline-block
      padding .8em
      a
        font-size .9em
        line-height 1.4