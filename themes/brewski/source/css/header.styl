@import "./variables.styl"

header 
  flexbox()

  #logo
    width 170px
    margin 1rem
    margin-left 16px
    flex-wrap wrap
    justify-content center
  
.nav-list
  flexbox()
  flex-wrap wrap
  justify-content center
  margin 1rem

.nav-list-link
  padding-bottom .15em
  border-bottom .2em solid transparent

.nav-list-link:hover
  border-bottom .2em solid $primary
  padding-bottom .15em
  transition 150ms ease-in-out
