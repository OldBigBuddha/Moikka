code, pre
  font-size .8em
  background-color #f8f8f8
  font-family "SF Mono", "Monaco", "Inconsolata", "Fira Mono", "Droid Sans Mono", "Source Code Pro", monospace

.highlight
  position relative
  margin 1em 0
  border-radius .02em
  line-height 1.1em
  background-color #f8f8f8
  overflow-x auto
  .gutter
    display none

  .code
    pre
      padding 1.2em 1.4em
      line-height 1.5em
      margin 0
      .line
        width auto
        height 1.5em

.highlight table,
.highlight tr,
.highlight td
  width 100%
  border-collapse collapse
  padding 0
  margin 0

pre
  color #525252
  .subst
    font-weight normal
  .meta
    color #999
    font-weight 600
  .deletion
    background #fdd
  .addition
    background #dfd
  .emphasis
    font-style italic
  .strong
    font-weight 600

  .comment, .quote
    color #998
    font-style italic

  .keyword,
  .selector-tag,
  .subst
    color #222831
    font-weight 600

  .number,
  .literal,
  .variable,
  .template-variable,
  .tag .attr
    color #008080

  .string,
  .doctag
    color #d14

  .title,
  .section,
  .selector-id
    color #900
    font-weight 600

  .type,
  .class .title
    color #458
    font-weight 600

  .tag,
  .name,
  .attribute
    color #000080
    font-weight normal

  .regexp,
  .link
    color #009926

  .symbol,
  .bullet
    color #990073

  .built_in,
  .builtin-name
    color #0086b3