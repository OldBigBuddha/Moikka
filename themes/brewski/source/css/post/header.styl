@import "../_variables.styl"
@import "../_util.styl"
header.post-header
	padding 0
	position relative
.eyecatch
	height 70vh
	width 100%
	overflow hidden
	text-align center
	position relative
	img
		width 100%
		height auto
	&:after
		display block
		position absolute
		content ''
		width 100%
		height 100%
		background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.3) 100%)
		top 0
.post-info
	position absolute
	z-index 3
	margin 0
	bottom 1em
	left 8em
.post-title
	font-size 3em
	margin 0
	color white
.post-time
	color $base
	padding .2em .3em
	border-radius .3em
	font-size .7em
	background-color $gray
.post-content
	background white
	border-radius 10px
	margin 0 5em
	padding 3em
	margin-top 1.5em
@media (orientation : portrait)
	.eyecatch
		height 50vh
		img
			height 100%
			width auto
	.post-title
		font-size 2em
@media (max-width: 38em)
	.post-info
		left 2em
	.post-content, .post-footer
		margin 1em
		padding 1em