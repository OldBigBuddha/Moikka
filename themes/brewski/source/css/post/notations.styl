@import "../_variables.styl"

.post-content
  blockquote
  	display block
  	margin-block-start 1em
  	margin-block-end 1em
  	margin-inline-start 40px
  	margin-inline-end 40px
  li
  	display list-item
  	text-align -webkit-match-parent
  ul, menu, dir, ol
  	display block
  	margin-block-start 1em
  	margin-block-end 1em
  	margin-inline-start 0px
  	margin-inline-end 0px
  	padding-inline-start 40px
  // 見出し
  h1, h2, h3, h4, h5, h6
    margin-top 1em
    margin-bottom 1.5em
  h1
    position relative
    padding 0.5em
    background $subGreen
    color white
    &:before
      position: absolute;
      content: '';
      top: 100%;
      left: 0;
      border: none;
      border-bottom: solid 15px transparent;
      border-right: solid 20px rgb(149, 158, 155);
  h2
    border-bottom dashed 2px $subGreen
    padding-left 4px
    font-size: 1em

  // 箇条書き
  ul li
    list-style none
    line-height 1.5
    padding 0.5em 0
    &:before
      font-family "Font Awesome 5 Free"
      font-weight 900
      content '\f152'
      margin 0 5px 0 -15px
      color $subGreen

  // 引用
  blockquote
    position relative
    padding 7px 16px
    box-sizing border-box
    font-style italic
    color $gray
    background-color #e5e5e5
    border-radius 10px
    &:before, &:after
      display inline-block
      position absolute
      width 40px
      height 40px
      line-height 40px
      border-radius 50%
      vertical-align middle
      text-align center
      font-family "Font Awesome 5 Free"
      font-weight 900
      background $subGreen
      color #FFF
      font-size 22px
    &:before
      content "\f10d"
      top -10px
      left -10px
    &:after
      bottom -10px
      right -10px
      content "\f10e"
    p
      padding 0
      margin 10px 0
      line-height 1.7
    cite
      display block
      text-align right
      color #888888
      font-size 0.9em

  // 強調・イタリック体

  // 水平線

  // リンク
  a
    color $primary


  img
    display block
    max-width 100%
    margin 1em auto