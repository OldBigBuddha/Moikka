@import './variables.styl'
@import './flex.styl'

#cookie-banner
  position fixed
  bottom -80
  left 0
  width 100%
  height 80px
  z-index 10
  color white
  background-color $gray
  padding 16px 24px

  // 読み込み終了後にjQueryで表示させる
  display none
  // flexbox()
  justify-content: flex-end;
  align-items center

  p
    margin-right: auto;
    font-size 12px
    text-align: left
    z-index 11

    a
      color $accent

  #button-agree
    text-align center
    background-color $accent
    border-radius 5px
    cursor pointer
    min-width 100px
    margin 24px 8px
    padding 8px 12px
    z-index 11

