@import "../_variables.styl"
@import "../_util.styl"

.post-footer
	background white
	border-radius 10px
	margin 0 5em
	padding 3em
	margin-top 1.5em

.post-writer
	margin 20px 0
	padding 15px 17px 17px
	position relative
	border 3px solid #ddd
	display flex
	align-items center
	background $base
.writer-portfolio
	flex-basis 80px
	width 80px
	min-width 80px
	height 80px
	border-radius 50%
	box-shadow 0px 0px 0px 3px $accent
	transition .5s
	&:hover
		box-shadow 0px 0px 5px 4px $accent
	img
		border-radius 50%
.writer-content
	display block
	margin 0 0 0 22px
	h2
		margin 3px 0px 3px 0px
		font-size 11px
		line-height 30px
		letter-spacing .05rem
		height 30px
		&:before
			content "この記事を書いた人:"
.writer-name
	padding 0 0 0 5px
	font-size 18px
	font-weight 700
	line-height 1.5
	letter-spacing .05rem
	color $primary
.writer-description
	margin 0
	font-size 13px
	line-height 1.5
	letter-spacing .05rem
.writer-sns
	display flex
	padding 0
	margin 1em 0 0 0 
	list-style none
	li
		height 35px
		min-width 35px
		text-align center
		padding 0
		margin-right 5px
		a
			font-size 20px
			line-height 35px
			width 100%
			height 100%
			color white
			border-radius 5px
			transition .35s
			&.fa-twitter
				background #00ACED
			&.fa-instagram
				background #d6249f
				background radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%,#d6249f 60%,#285AEB 90%)
			&.fa-facebook-f
				background #4A63A2
			&:hover
				boxshadow()

// pagination用ファイルを作って@importする？
//post-footerとしてまとまっているので現状維持で。
.paginator
	margin 2em 0
	display flex
	justify-content space-around

	.prev,
	.next
		position relative
		box-shadow 0 .3em #801501
		display inline-block
		margin 0 .2em
		padding .3em 1.5em
		border-radius 5px
		color #fff
		background-color #9e1900
		font-weight 600

	.prev:hover,
	.next:hover
		box-shadow 0 .2em #801501
		top .1em