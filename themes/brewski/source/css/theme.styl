@import "variables.styl"

body
  margin 0
  color $black
  font-size calc(110% + 0.1vw)
  line-height 1.6
  background-color $base
  font-family system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif

@media (min-width: 768px)
  main#main
    float left
    width 66%
    // margin-right .75em
  aside#side-bar
    float right
    width 33.33%
    
@media (max-width: 767px)
  main#main
    width 100%
    margin 0
  #side-bar
    width: 100%;

.wrap, .barba-container
  width 96%
  margin 0 auto
  overflow: hidden;
  zoom: 1;

.container
  background: white;
  padding 25px
  min-height 30vh

h1, h2, h3, h4, h5, h6
  line-height 1.2

ul
  margin 1rem 0

p
  letter-spacing -.01em
  line-height 1.8
  margin 1.2em 0

a,
a:active
  color #222831
  text-decoration none

::selection
  color #fff
  background-color #9e1900

code
  padding .2em .4em

iframe,
video
  max-width 100%
  margin 1rem auto

table
  th
    font-weight 600
    border 0
    text-align left
    margin 0
    padding .4em .8em

  thead
    background-color #fff

  tbody
    tr
      border-top 0
      background-color #fff
      &:nth-child(2n)
        background-color #f6f8fa
    td
      border .05em solid transparent
      text-align left

table tbody th :first-child,
table tbody td :first-child
  margin-top 0

table tbody th :last-child,
table tbody td :last-child
  margin-bottom 0


.logo-image
  &:hover
    animation sway 1.4s easeout both

@keyframes sway {
	10%,
  90% {
		transform: rotate(-15deg);
	}

	20%,
  80% {
		transform: rotate(15deg);
	}

	30%,
  50%,
  70% {
		transform: rotate(-10deg);
	}

	40%,
  60% {
		transform: rotate(10deg);
	}
}

.logo-image
  height 5em

.home
  &.post-list
    margin 2em 0
    list-style none
    .post-list-item
      padding 1em .4em
    .post-content
      & > ul
        list-style initial
    .read-more
      color #9e1900

.home.post-list .post-content h2:before,
.home.post-list .post-content h3:before,
.home.post-list .post-content h4:before,
.home.post-list .post-content h5:before,
.home.post-list .post-content h6:before
  content ""

.archive
  .post-item
    display flex
    flex-wrap wrap
    padding-left 1.5rem

  .post-title-link
    color #9e1900
    padding-left 1em
    &:hover
      border-bottom 0
      color #801501

  .post-info
    width 6em
    font-size .9em
    color #393e46

.archive .post-time,
.archive .post-title-link
  font-size 1rem

.post
  padding-top
    .1em
      .post-block
        .post-title
          margin .65em 0
          font-size 1.5em

.post-block
  .post-info
    color #393e46
    margin 1.2em 0
    span
      margin-left .5rem
    a.post-from
      margin-left .5rem
      padding .2em .3em
      border-radius .3em
      font-size .7em
      color #fff
      background-color #e36b6b

blockquote
  margin 2em 0
  padding .5em 1.3em
  border .05em solid #eee
  border-radius .1em
  bordercolor #9e1900
  borderwidth .1em
  &.warning
    bordercolor #f0ad4e
    borderwidth 4px

li
  margin-left 1em
  listtype disc

// img
//   display block
//   max-width 100%
//   margin 1em auto

.tip
  position relative
  margin 2em 0
  padding .6em 1.2em .6em 1.2em
  border-left 4px solid #f66
  border borderright-radius .06em
  background-color #f8f8f8
  br
    display none
  &:before
    position absolute
    top 14px
    left -12px
    content "!"
    width 20px
    height 20px
    border-radius 100%
    color #fff
    font-size 14px
    line-height 20px
    font-weight 600
    text-align center
    background-color #f66
    font-family "Dosis", "Source Sans Pro", "Helvetica Neue", Arial, sans-serif

#mask
  position fixed
  overflow scroll
  width 100%
  height 100%
  padding 1em 0
  background-color rgba(0, 0, 0, .5)
  z-index 10
  #mask-image
    max-width 95%

.paginator
  margin 2em 0
  display flex
  justify-content space-around

  .prev,
  .next
    position relative
    box-shadow 0 .3em #801501
    display inline-block
    margin 0 .2em
    padding .3em 1.5em
    border-radius 5px
    color #fff
    background-color #9e1900
    font-weight 600

  .prev:hover,
  .next:hover
    box-shadow 0 .2em #801501
    top .1em

.ds-thread,
#disqus_thread
  margin-bottom 2em

@media screen and (max-width: 700px) {
  main.container,
  .home.post-list,
  .archive {
    margin-top: 0;
  }
  .ds-thread,
  #disqus_thread {
    margin: 2em .8em;
  }
}

footer
  width 100%
  .copyright
    font-size .8em
    margin 4em 4em
    border-top 1px solid #eee
    text-align center
    a
      &:hover
        color #393e46

    p, a
      padding 1em 0
      color #393e46
      font-weight 300

code, pre
  font-size .8em
  background-color #f8f8f8
  font-family "SF Mono", "Monaco", "Inconsolata", "Fira Mono", "Droid Sans Mono", "Source Code Pro", monospace

.highlight
  position relative
  margin 1em 0
  border-radius .02em
  line-height 1.1em
  background-color #f8f8f8
  overflow-x auto
  .gutter
    display none

  .code
    pre
      padding 1.2em 1.4em
      line-height 1.5em
      margin 0
      .line
        width auto
        height 1.5em

.highlight table,
.highlight tr,
.highlight td
  width 100%
  border-collapse collapse
  padding 0
  margin 0

pre
  color #525252
  .subst
    font-weight normal
  .meta
    color #999
    font-weight 600
  .deletion
    background #fdd
  .addition
    background #dfd
  .emphasis
    font-style italic
  .strong
    font-weight 600

  .comment, .quote
    color #998
    font-style italic

  .keyword,
  .selector-tag,
  .subst
    color #222831
    font-weight 600

  .number,
  .literal,
  .variable,
  .template-variable,
  .tag .attr
    color #008080

  .string,
  .doctag
    color #d14

  .title,
  .section,
  .selector-id
    color #900
    font-weight 600

  .type,
  .class .title
    color #458
    font-weight 600

  .tag,
  .name,
  .attribute
    color #000080
    font-weight normal

  .regexp,
  .link
    color #009926

  .symbol,
  .bullet
    color #990073

  .built_in,
  .builtin-name
    color #0086b3