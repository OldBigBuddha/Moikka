@import './variables.styl'

.main-header
	padding 1rem 5rem
	position -webkit-sticky
	position sticky
	top 0

.logo-image
	position relative
	display inline-block
	margin 0 auto
	margin-bottom 1rem
	svg
		height 5rem
		width auto

.nav-wrap
	padding-top 1em
	padding-bottom .5em
	text-align center

.nav
	list-style none
	padding 0
	margin 0rem -.5em

.nav li
	display inline-block
	float none
	margin-left .5em
	margin-right .5em

.nav .link-block-styled, .nav a
	text-decoration none
	&:hover
		border-bottom .2em solid $primary
		transition 150ms ease-in-out

@media (min-width: 38em)
	li
		margin-bottom .25em
@media (min-width: 60em)
	.nav-wrap
		text-align left
	.logo-image
		float left
		margin-bottom 0
	.nav
		text-align right
		margin 2rem -.5em