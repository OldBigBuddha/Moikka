@import "variables.styl"


body
  margin 0
  color $black
  font-size calc(110% + 0.1vw)
  line-height 1.6
  background-color $base
  font-family system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif


main#main
  float left
  width 66%
  
aside#side-bar
  float right
  width 33.33%

.wrap, .barba-container
  width 96%
  margin 0 auto
  overflow: hidden;
  zoom: 1;

.container
  background: white;
  padding 25px
  min-height 30vh
  
@media (max-width: 767px)
  main#main
    width 100%
    margin 0
  #side-bar
    width: 100%;
  main.container,
  .home.post-list,
  .agitrchive {
    margin-top: 0;
  }

h1, h2, h3, h4, h5, h6
  line-height 1.2

ul
  margin 1rem 0

p
  letter-spacing -.01em
  line-height 1.8
  margin 1.2em 0

a,
a:active
  color #222831
  text-decoration none

::selection
  color #fff
  background-color #9e1900

code
  padding .2em .4em

iframe,
video
  max-width 100%
  margin 1rem auto

table
  th
    font-weight 600
    border 0
    text-align left
    margin 0
    padding .4em .8em

  thead
    background-color #fff

  tbody
    tr
      border-top 0
      background-color #fff
      &:nth-child(2n)
        background-color #f6f8fa
    td
      border .05em solid transparent
      text-align left

table tbody th :first-child,
table tbody td :first-child
  margin-top 0

table tbody th :last-child,
table tbody td :last-child
  margin-bottom 0

blockquote
  margin 2em 0
  padding .5em 1.3em
  border .05em solid #eee
  border-radius .1em
  bordercolor #9e1900
  borderwidth .1em
  &.warning
    bordercolor #f0ad4e
    borderwidth 4px

li
  margin-left 1em
  listtype disc

// img
//   display block
//   max-width 100%
//   margin 1em auto


.home
  &.post-list
    margin 2em 0
    list-style none
    .post-list-item
      padding 1em .4em
    .post-content
      & > ul
        list-style initial
    .read-more
      color #9e1900
.home.post-list .post-content h2:before,
.home.post-list .post-content h3:before,
.home.post-list .post-content h4:before,
.home.post-list .post-content h5:before,
.home.post-list .post-content h6:before
  content ""

.archive
  .post-item
    display flex
    flex-wrap wrap
    padding-left 1.5rem

  .post-title-link
    color #9e1900
    padding-left 1em
    &:hover
      border-bottom 0
      color #801501

  .post-info
    width 6em
    font-size .9em
    color #393e46
.archive .post-time,
.archive .post-title-link
  font-size 1rem

.tip
  position relative
  margin 2em 0
  padding .6em 1.2em .6em 1.2em
  border-left 4px solid #f66
  border borderright-radius .06em
  background-color #f8f8f8
  br
    display none
  &:before
    position absolute
    top 14px
    left -12px
    content "!"
    width 20px
    height 20px
    border-radius 100%
    color #fff
    font-size 14px
    line-height 20px
    font-weight 600
    text-align center
    background-color #f66
    font-family "Dosis", "Source Sans Pro", "Helvetica Neue", Arial, sans-serif

#mask
  position fixed
  overflow scroll
  width 100%
  height 100%
  padding 1em 0
  background-color rgba(0, 0, 0, .5)
  z-index 10
  #mask-image
    max-width 95%