@import "../_variables.styl"

.header-anchor
  display none

.toc
  color #454545
  background #f1f8ff
  box-shadow 0px 0px 0px 10px #f1f8ff
  border dashed 2px #668ad8
  border-radius 9px
  margin-left 10px
  margin-right 10px
  padding 0.5em 0.5em 0.5em 2em

  ul li
    list-style none
    line-height 1.5
    padding 0.5em 0
    &:before
      font-family "Font Awesome 5 Free"
      font-weight 900
      content '\f058'
      margin 0 5px 0 -15px
      color $primary
