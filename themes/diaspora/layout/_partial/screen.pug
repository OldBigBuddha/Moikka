- var first = site.posts.sort("date", "desc").eq(0);
.screen
  .mark
    .layer(data-depth="0.4")
      image_tag(theme.welcome_cover || first.cover || "/img/welcome-cover.jpg", 
        `{
          id: "cover",
          crossorigin: "anonymous",
          width: 1920,
          height: 1080
        }`
      )
    #vibrant"
        svg(viewBox="0 0 2880 1620" height="100%" preserveAspectRatio="xMaxYMax slice")
            polygon(opacity="0.7" points="2000,1620 0,1620 0,0 600,0")
    #header
      div
        a.image-logo(href="/")
          .icon-menu.switchmenu
    if ( first ) {
    #post0
      p first.date.locale("zh-cn").format("MMMM DD, YYYY")
      h2 link_to(url_for(first.path), first.title || config.title, `{class: "posttitle"}`)
      p.summary truncate(strip_html(first.content), {length: 60, `omission: '...'`})
    }