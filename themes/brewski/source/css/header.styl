@import './variables.styl'
@import './flex.styl'

.logo-image
  height 5em

.logo-image
  &:hover
    animation sway 1.4s easeout both

@keyframes sway {
	10%,
  90% {
		transform: rotate(-15deg);
	}

	20%,
  80% {
		transform: rotate(15deg);
	}

	30%,
  50%,
  70% {
		transform: rotate(-10deg);
	}

	40%,
  60% {
		transform: rotate(10deg);
	}
}

header.main-header
	min-height 7rem
	padding-top 20px
	flexbox()
	align-items center
	justify-content space-between

	#logo
		display: inline-block;
		max-height 5rem
		width auto
		margin 1rem
		position: relative;

	.nav-list
		flexbox()
		flex-wrap wrap
		justify-content center

	.nav-list-link
		&:hover
			border-bottom .2em solid $primary
			transition 150ms ease-in-out

	.nav-list-item
		margin 0
		display inline-block
		padding .8em
		a
			font-size .9em
			line-height 1.4

@media (min-width: 768px)
	#logo
		margin-right auto
@media (max-width: 767px)
	header.main-header
		flex-wrap wrap
		justify-content center
	#logo
		height 100%
		width auto
		margin 1rem
		margin-right auto