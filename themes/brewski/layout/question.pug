extends partial/layout.pug

block site_title
  != page.title + ' | ' + config.title

block description
  - var desc = page.desc || page.title + ' - ' + config.author;
  meta(name='description', content=desc)

block container
  .post
    article.post-block
      h1.post-title
        != page.title
      .post-content
        p Here is qeustion form
        != page.content

      .form
        form(name="question", method="post", netlify)
          p
            label(for="name") お名前:
            input(type="text", name="name")

          p
            label(for="content") 質問内容
          p
            textarea(name="content", cols="30")

          p
            button(type="submit") 送信

block copyright
  include partial/copyright.pug