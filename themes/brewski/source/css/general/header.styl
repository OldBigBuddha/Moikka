@import '../_variables.styl'
@import '../_util.styl'

.main-header
	padding 1rem 5rem
	position -webkit-sticky
	position sticky
	top 0
	min-height 5rem

.nav-wrap
	text-align center
	min-height 2rem

.logo-image
	position relative
	display block
	margin 0 auto
	margin-bottom 1rem
	img
		height 80px
		width auto

.nav
	list-style none
	padding 0
	margin 0rem

.nav li
	display inline-block
	float none
	margin-left .5em
	margin-right .5em

.nav .link-block-styled, .nav a
	text-decoration none
	&:hover
		border-bottom .2em solid $primary
		transition 150ms ease-in-out

@media (min-width: 38em)
	li
		margin-bottom .25em
@media (min-width: 60em)
	.nav-wrap
		display flex
		align-items center
		justify-content space-between
	.logo-image
		margin 0
	.nav
		text-align right